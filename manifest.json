{
    "manifest_version": 2,
    "name":    "Don't Host Hate",
    "version": "0.0.0.2",
    "offline_enabled": false,

    "background": {
        "persistent": true,
        "page": "background.html"
    },

    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/donthosthate_16.png",
        "32": "images/donthosthate_32.png",
        "48": "images/donthosthate_48.png",
        "128": "images/donthosthate_128.png"
      }
    },

    "options_page": "options.html",

    "permissions": [
        "storage",
        "webRequest",
        "http://*/*",
        "https://*/*"
    ]
}
