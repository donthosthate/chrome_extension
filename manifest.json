{
    "manifest_version": 2,
    "name":    "Don't Host Hate",
    "version": "0.0",
    "offline_enabled": false,

    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },

    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/donthosthate_16.png",
        "32": "images/donthosthate_32.png",
        "48": "images/donthosthate_48.png",
        "128": "images/donthosthate_128.png"
      }
    },

    "permissions": [
        "webRequest",
        "*://*/*"
    ]
}
